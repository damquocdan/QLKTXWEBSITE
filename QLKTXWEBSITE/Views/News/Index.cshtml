@model IEnumerable<QLKTXWEBSITE.Models.News>

@{
    ViewData["Title"] = "Index";
}

<h1>Tin tức</h1>

<div class="row">
    <div class="col-md-9">
        <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="card" style="width=100%">
                    <img src="@item.Author" alt="@item.Title" class="mb-0 w-100 text-center" width="100%" height="150px" />
                    <div class="card-body" style="width:240px">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.PublishedDate)</p>
                        <a asp-action="Details" asp-route-id="@item.NewsId" class="btn btn-primary">Xem thêm</a>
                    </div>
                </div>
            </div>
        }
        </div>
    </div>
    <div class="col-md-3">
        ...
    </div>
</div>
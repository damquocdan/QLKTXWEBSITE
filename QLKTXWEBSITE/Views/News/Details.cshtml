 @model QLKTXWEBSITE.Models.News

@{
    ViewData["Title"] = "Details";
}
<hr style="color:green" />
<h1> @Html.DisplayFor(model => model.Title)</h1>
<div>
    <img src="@Model.Author" alt="@Model.Title" style="width:100%; height:200px; border-radius:5px" />
</div>
<div class="ps-5">
    <div class="row">
        <p class="fw-normal" style="font-size:1.2rem">@Html.Raw(Model.Content)</p>
    </div>
    <div class="row float-end">
        <p class="" style="font-size:0.8rem; color:#ccc;">@Model.PublishedDate?.ToString("dd/MM/yyy")</p>
    </div>
</div>

<div class="mt-2">
    <div>
        <a href="#" onclick="window.history.back();" class="link">Quay lại</a>
    </div>
</div>

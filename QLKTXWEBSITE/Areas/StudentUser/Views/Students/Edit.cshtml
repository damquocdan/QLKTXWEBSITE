@model QLKTXWEBSITE.Models.Student

@{
    ViewData["Title"] = "Edit";
}
<style>
    /* Định dạng tiêu đề */
    h1 {
        text-align: center;
        margin-bottom: 20px;
    }

    /* Định dạng phần form */
    .form-group {
        margin-bottom: 20px;
    }

    /* Định dạng label */
    .control-label {
        font-weight: bold;
    }

    /* Định dạng input */
    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    /* Định dạng button */
    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    /* Định dạng link */
    .link {
        color: #007bff;
        text-decoration: none;
    }

        .link:hover {
            text-decoration: underline;
        }

    /* Định dạng kết quả thông báo validation */
    .text-danger {
        color: red;
    }

    /* Định dạng khu vực nút quay lại */
    div {
        text-align: center;
        margin-top: 20px;
    }

</style>
<h1>Sửa thông tin</h1>
<hr />
<div class="row" >
    <div class="col-md-4" style="margin-left:33%">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StudentId" />
            <div class="form-group" style="display: none;">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label">Ngày sinh</label>
                <input asp-for="DateOfBirth" class="form-control"/>
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Số điện thoại</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParentPhoneNumber" class="control-label">Số điện thoại phụ huynh</label>
                <input asp-for="ParentPhoneNumber" class="form-control" />
                <span asp-validation-for="ParentPhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentCode" class="control-label">Mã sinh viên</label>
                <input asp-for="StudentCode" class="form-control" />
                <span asp-validation-for="StudentCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dhid" class="control-label">Khoá</label>
                <select asp-for="Dhid" class="form-control" asp-items="ViewBag.Dhid"></select>
                <span asp-validation-for="Dhid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentId" class="control-label">Khoa</label>
                <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId"></select>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Class" class="control-label">Lớp</label>
                <input asp-for="Class" class="form-control" />
                <span asp-validation-for="Class" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="AdmissionConfirmation" class="control-label">Ảnh đại diện (4 x 6)</label>
                <input asp-for="AdmissionConfirmation" class="form-control"/>
                <span asp-validation-for="AdmissionConfirmation" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="RoomId" class="control-label"></label>
                <select asp-for="RoomId" class="form-control" asp-items="ViewBag.RoomId"></select>
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>
            <div class="form-group" style="display: none;">
                <label asp-for="BedId" class="control-label"></label>
                <select asp-for="BedId" class="form-control" asp-items="ViewBag.BedId"></select>
                <span asp-validation-for="BedId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="#" onclick="window.history.back();" class="link">Quay lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

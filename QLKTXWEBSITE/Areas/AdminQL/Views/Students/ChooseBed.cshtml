@model QLKTXWEBSITE.Models.Student

@{
    ViewData["Title"] = "Choose Bed";
    Layout = "~/Areas/AdminQL/Views/Shared/Admin.cshtml";
}

<h1>Choose Bed</h1>

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.SuccessMessage
    </div>
}

<form asp-action="ChooseBed" method="post">
    <div class="form-group">
        <label for="bedId">Select Bed:</label>
        <select class="form-control" id="bedId" name="bedId">
            @foreach (var item in ViewBag.BedList)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
    </div>
    <input type="hidden" name="studentId" value="@Model.StudentId" />
    <button type="submit" class="btn btn-primary">Choose</button>

    <!-- Quay lại trang index của BedOfRooms với ID của phòng -->
    <a href="@Url.Action("Index", "BedOfRooms", new { id = ViewBag.RoomId })" class="btn btn-secondary">Back to BedOfRooms</a>
</form>
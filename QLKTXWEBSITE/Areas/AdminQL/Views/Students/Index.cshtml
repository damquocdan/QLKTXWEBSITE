@model IEnumerable<QLKTXWEBSITE.Models.Student>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminQL/Views/Shared/Admin.cshtml";
}

<h1>Quản lý sinh viên</h1>

<p>
    <a asp-action="ExportToExcel" class="btn btn-primary">Xuất dữ liệu ra Excel</a>
</p>

<div class="row">
    <div class="col-md-6 mb-2">
        <form action="" method="get" class="form-inline">
            <div class="form-group">
                <label class="sr-only" for="keyword">Search by Name:</label>
                <input class="form-control" name="name" id="keyword" placeholder="Nhập tên sinh viên">
            </div>
            <button type="submit" class="btn btn-primary ml-2"><i class="fas fa-search"></i> Tìm kiếm</button>
        </form>
    </div>
    <div class="col-md-6 text-right">
        <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i>Tạo sinh viên mới</a>
    </div>
</div>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>Họ và tên</th>
            <th>Mã sinh viên</th>
            <th>Lớp</th>
            <th>Giường số</th>
            <th>Khoa</th>
            <th>Khoá</th>
            <th>Phòng số</th>
            <th>CHức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                <td>@Html.DisplayFor(modelItem => item.StudentCode)</td>
                <td>@Html.DisplayFor(modelItem => item.Class)</td>
                <td>@Html.DisplayFor(modelItem => item.Bed.NumberBed)</td>
                <td>@Html.DisplayFor(modelItem => item.Department.DepartmentName)</td>
                <td>@Html.DisplayFor(modelItem => item.Dh.Dhcode)</td>
                <td>@Html.DisplayFor(modelItem => item.Room.NumberRoom)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.StudentId" class="btn btn-primary btn-sm">Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.StudentId" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.StudentId" class="btn btn-danger btn-sm">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>

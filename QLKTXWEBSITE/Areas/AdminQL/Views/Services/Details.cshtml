@model QLKTXWEBSITE.Models.Service

@{
    ViewData["Title"] = "Chi tiết dịch vụ";
    Layout = "~/Areas/AdminQL/Views/Shared/Admin.cshtml";
}

<h1>Chi tiết dịch vụ</h1>

<div class="container">
    <h4>Dịch vụ</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Phòng số
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.NumberRoom)
        </dd>
        <dt class="col-sm-2">
            Họ và tên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.FullName)
        </dd>
        <dt class="col-sm-2">
            Tên dịch vụ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ServiceName)
        </dd>
        <dt class="col-sm-2">
            Số tháng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Month)
        </dd>
        <dt class="col-sm-2">
            Số tiền
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            Trạng thái
        </dt>
        <dd class="col-sm-10">
            @if (Model.Status == true)
            {
                <text>Đã thanh toán</text>
            }
            else
            {
                <text>Chưa thanh toán</text>
            }
        </dd>
        
    </dl>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <a asp-action="Edit" asp-route-id="@Model?.ServiceId" class="btn btn-primary">Chỉnh sửa</a>
            <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
        </div>
    </div>
</div>

@model IEnumerable<QLKTXWEBSITE.Models.Transaction>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminQL/Views/Shared/Admin.cshtml";
}

<h1>Quản lý thanh toán</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"> <i class="fa-solid fa-circle-plus fa-xl pe-2"></i>Tạo mới</a>
</p>
<table class="table mb-5">
    <thead class="thead-dark ">
        <tr>
            <th>
                <div class="text-center">
                    <p class="mb-0">
                        Họ và tên
                    </p>
                </div>
            </th>
            <th>
                <div class="ms-3">
                    <p class="mb-0">
                        Số tiền
                    </p>
                </div>
            </th>
            <th>
                <div class="text-center">
                    <p class="mb-0">
                        Ngày giao dịch
                    </p>
                </div>
            </th>
     
            <th>
                <div class="text-center">
                    <p class="mb-0">
                        Hành động
                    </p>
                </div>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <div class="d-flex align-items-center" style="height:38px">
                        <p class="mb-0 w-100 text-center">@Html.DisplayFor(modelItem => item.Student.FullName)</p>
                    </div>
                </td>
                <td>
                    <div class="d-flex align-items-center ms-3" style="height:38px">
                        <p class="mb-0">@Html.DisplayFor(modelItem => item.Amount)</p>
                    </div>
                </td>
                
                <td>
                    <div class="d-flex align-items-center" style="height:38px">
                        <p class="mb-0 w-100 text-center">@Html.DisplayFor(modelItem => item.TransactionDate)</p>
                    </div>
                </td>
                <td>
                    <div class=" d-flex justify-content-center">
                        <a asp-action="Edit" asp-route-id="@item.TransactionId" class="btn btn-primary">Sửa</a>
                        <a asp-action="Details" asp-route-id="@item.TransactionId" class="btn btn-success mx-3">Chi tiết</a>
                        <a asp-action="Delete" asp-route-id="@item.TransactionId" class="btn btn-danger">Xoá</a>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


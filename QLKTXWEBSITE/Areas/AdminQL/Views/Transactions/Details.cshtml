@model QLKTXWEBSITE.Models.Transaction

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/AdminQL/Views/Shared/Admin.cshtml";
}

<h1>Chi tiết</h1>

<div>
    <h4>Giao dịch</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Họ và tên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.FullName)
        </dd>
        <dt class="col-sm-2">
            Số tiền
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            Mô tả
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Mã giao dịch
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TransactionCode)
        </dd>
        <dt class="col-sm-2">
            Ngày giao dịch
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TransactionDate)
        </dd>
        
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.TransactionId" class="btn btn-primary">Sửa</a> 
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>
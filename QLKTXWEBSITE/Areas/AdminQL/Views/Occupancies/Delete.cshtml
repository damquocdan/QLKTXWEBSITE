@model QLKTXWEBSITE.Models.Occupancy

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/AdminQL/Views/Shared/Admin.cshtml";
}


<h3>Bạn có muốn xoá hợp đồng này</h3>
<div class="mb-5">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Họ và tên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.FullName)
        </dd>
        <dt class="col-sm-2">
            Phòng số
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.NumberRoom)
        </dd>
        <dt class = "col-sm-2">
            Ngày gia hạn
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RenewalDate)
        </dd>
        <dt class = "col-sm-2">
            Ngày kết thúc
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExpirationDate)
        </dd>
        <dt class = "col-sm-2">
            Số tháng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CycleMonths)
        </dd>
        <dt class = "col-sm-2">
            Trạng thái
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Status == true)
            {
                <div class="d-flex align-items-center" style="height:38px">
                    <p class="mb-0 text-success">Đã thanh toán</p>
                </div>
            }
            else
            {
                <div class="d-flex align-items-center" style="height:38px">
                    <p class="mb-0 text-danger">Chưa thanh toán</p>
                </div>
            }
        </dd>
       
        
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="OccupancyId" />
        <input type="submit" value="Xoá" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary ">Quay lại danh sách</a>
    </form>
</div>

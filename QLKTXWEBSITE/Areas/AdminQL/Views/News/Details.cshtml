@model QLKTXWEBSITE.Models.News

@{
    ViewData["Title"] = "Chi tiết";
    Layout = "~/Areas/AdminQL/Views/Shared/Admin.cshtml";
}

<h1>Chi tiết</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h4>Tin tức</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Tiêu đề
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-2">
                    Nội dung
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Content)
                </dd>
                <dt class="col-sm-2">
                    Ngày đăng bài
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PublishedDate)
                </dd>
                <dt class="col-sm-2">
                    Ảnh
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Author)
                </dd>
            </dl>
        </div>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.NewsId" class="btn btn-primary">Chỉnh sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>

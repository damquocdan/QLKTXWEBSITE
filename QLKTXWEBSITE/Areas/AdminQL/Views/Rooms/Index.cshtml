@model IEnumerable<QLKTXWEBSITE.Models.Room>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminQL/Views/Shared/Admin.cshtml";
}

<h1>Danh sách các phòng</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Tạo phòng mới</a>
</p>

<!-- Form tìm kiếm -->
<form method="get" class="form-inline">
    <div class="form-group mr-2">
        <label for="mowroom">Phòng:</label>
        <select id="mowroom" name="mowroom" class="form-control">
            <option value="">Tất cả</option>
            <option value="Nam">Nam</option>
            <option value="Nữ">Nữ</option>
        </select>
    </div>
    <div class="form-group mr-2">
        <label for="building">Toà:</label>
        <select id="building" name="building" class="form-control">
            <option value="">Tất cả</option>
            <option value="A">A</option>
            <option value="B">B</option>
        </select>
    </div>
    <div class="form-group mr-2">
        <label for="numberRoom">Phòng số:</label>
        <input type="text" id="numberRoom" name="numberRoom" class="form-control" />
    </div>
    <div class="form-group mr-2">
        <label for="status">Trạng thái:</label>
        <select id="status" name="status" class="form-control">
            <option value="">Tất cả</option>
            <option value="True">Đầy</option>
            <option value="False">Trống</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Tìm kiếm</button>
</form>

<table class="table mt-2">
    <thead class="thead-dark">
        <tr>
            <th>
                Phòng Nam/Nữ
            </th>
            <th>
                Toà
            </th>
            <th>
                Tầng
            </th>
            <th>
                Phòng số
            </th>
            <th>
                Số giường
            </th>
            <th>
                Số sinh viên
            </th>
            <th>
                Trạng thái
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Mowroom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Building)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Floor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberRoom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BedNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfStudents)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.RoomId" class="btn btn-primary">Sửa</a> 
                    <a asp-action="Details" asp-route-id="@item.RoomId" class="btn btn-info">Chi tiết</a> 
                    <a asp-action="Delete" asp-route-id="@item.RoomId" class="btn btn-danger">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@model QLKTXWEBSITE.Models.Room

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/AdminQL/Views/Shared/Admin.cshtml";
}

<h1>Xoá</h1>

<h3>Bạn có chắc chắn muốn xoá không?</h3>
<div class="container">
    <div class="row">
        <div class="col-sm-2">
            <h4>Phòng @Html.DisplayFor(model => model.NumberRoom)</h4>
            <hr />
        </div>
        <div class="col-sm-10">
            <dl class="row">
                <dt class="col-sm-2">
                    Phòng
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Mowroom)
                </dd>
                <dt class="col-sm-2">
                    Toà
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Building)
                </dd>
                <dt class="col-sm-2">
                    Tầng
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Floor)
                </dd>
                <dt class="col-sm-2">
                    Số giường
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BedNumber)
                </dd>
                <dt class="col-sm-2">
                    Số sinh viên
                </dt>
                <dd class="col-sm-10">
                    @ViewData["NumberOfStudents"]
                </dd>
                <dt class="col-sm-2">
                    Trạng thái
                </dt>
                <dd class="col-sm-10">
                    @ViewData["Status"]
                </dd>
            </dl>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <form asp-action="Delete">
                <input type="hidden" asp-for="RoomId" />
                <button type="submit" class="btn btn-danger">Xoá</button>

            </form>
        </div>
    </div>
</div>
<a asp-action="Index" class="btn btn-secondary">Quay lại Danh sách</a>
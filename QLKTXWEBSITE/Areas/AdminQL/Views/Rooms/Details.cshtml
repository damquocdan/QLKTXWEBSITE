@model QLKTXWEBSITE.Models.Room

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/AdminQL/Views/Shared/Admin.cshtml";
}

<h1>Thông tin chi tiết</h1>

<div class="card border-dark col-md-3">
        <div>   
            <h4 class="text-center mt-4">Phòng @Html.DisplayFor(model => model.NumberRoom)</h4>
            <hr />
        </div>
        <div class="col-6">
            <div class="d-flex ms-2">
                <div style="width:7rem">
                    <p class="me-3 fw-bold">Phòng</p>
                </div>
                <div>
                    <p>@Html.DisplayFor(model => model.Mowroom)</p>
                </div>
            </div>
        <div class="d-flex ms-2">
                <div style="width:7rem">
                    <p class="me-3 fw-bold">Tòa</p>
                </div>
                <div>
                    <p>@Html.DisplayFor(model => model.Building)</p>
                </div>
            </div>
        <div class="d-flex ms-2">
                <div style="width:7rem">
                    <p class="me-3 fw-bold">Giá phòng (6 Tháng)</p>
                </div>
                <div>
                    <p>@Html.DisplayFor(model => model.Floor)</p>
                </div>
            </div>
        <div class="d-flex ms-2">
                <div style="width:7rem">
                    <p class="me-3 fw-bold">Số giường</p>
                </div>
                <div>
                    <p>@Html.DisplayFor(model => model.BedNumber)</p>
                </div>
            </div>
        <div class="d-flex ms-2">
                <div style="width:7rem">
                    <p class="me-3 fw-bold">Số sinh viên</p>
                </div>
                <div>
                    <p>@ViewData["NumberOfStudents"]</p>
                </div>
            </div>
        <div class="d-flex ms-2">
                <div style="width:7rem">
                    <p class="me-3 fw-bold">Trạng thái</p>
                </div>
                <div>
                    <p>@ViewData["Status"]</p>
                </div>
            </div>
    </div>
    <div class="d-flex justify-content-center">
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.RoomId" class="btn btn-primary me-2">Sửa</a>
        </div>
        <div>
            <a asp-action="Index" asp-controller="BedOfRooms" asp-route-roomid="@Model.RoomId" class="btn btn-info">Xem các giường</a>
        </div>
    </div>
</div>
<div class="mb-5">
    <a asp-action="Index" class="btn btn-secondary mt-3">Quay lại danh sách</a>
</div>


